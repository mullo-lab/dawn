{
  "sections": {
    "announcement-bar": {
      "type": "announcement-bar",
      "blocks": {
        "announcement": {
          "type": "announcement",
          "settings": {
            "text": "Complimentary Shipping on All Orders Over $150",
            "text_alignment": "center",
            "color_scheme": "inverse"
          }
        }
      },
      "block_order": [
        "announcement"
      ],
      "settings": {}
    },
    "header": {
      "type": "header",
      "settings": {
        "logo_position": "middle-left",
        "menu": "main-menu",
        "show_line_separator": false,
        "enable_sticky_header": true,
        "margin_bottom": 0
      }
    },
    "hero": {
      "type": "image-banner",
      "settings": {
        "image_height": "large",
        "desktop_content_position": "middle-left",
        "show_text_box": false,
        "desktop_content_alignment": "left",
        "color_scheme": "background-1",
        "stack_images_on_mobile": true
      },
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "Signature Layers for Modern Days",
            "heading_size": "h1"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "Discover timeless style integrated with technology. Crafted for the modern professional.",
            "text_style": "body"
          }
        },
        "buttons": {
          "type": "buttons",
          "settings": {
            "button_label_1": "Shop New Arrivals",
            "button_link_1": "shopify:\/\/collections\/all",
            "button_style_secondary_1": false,
            "button_label_2": "Explore Wearable Tech",
            "button_link_2": "shopify:\/\/collections\/all",
            "button_style_secondary_2": true
          }
        }
      },
      "block_order": ["heading", "text", "buttons"]
    },
    "featured_products": {
      "type": "featured-collection",
      "settings": {
        "title": "Essential Selections",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "full_width": true,
        "show_secondary_image": true,
        "columns_mobile": "2",
        "swipe_on_mobile": true,
        "padding_top": 36,
        "padding_bottom": 36
      }
    },
    "tech_feature": {
      "type": "image-with-text",
      "settings": {
        "layout": "right",
        "desktop_content_position": "middle",
        "content_layout": "no-overlap",
        "color_scheme": "inverse",
        "padding_top": 60,
        "padding_bottom": 60
      },
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "Wearable Technology Redefined",
            "heading_size": "h2"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "Seamlessly integrate health tracking and connectivity into your everyday life without compromising style.",
            "text_style": "body"
          }
        },
        "button": {
          "type": "button",
          "settings": {
            "button_label": "Discover Tech Collection",
            "button_link": "shopify:\/\/collections\/all"
          }
        }
      },
      "block_order": ["heading", "text", "button"]
    },
    "studio_story": {
      "type": "image-with-text",
      "settings": {
        "layout": "left",
        "desktop_content_position": "middle",
        "content_layout": "no-overlap",
        "color_scheme": "background-1",
        "padding_top": 60,
        "padding_bottom": 60
      },
      "blocks": {
        "caption": {
          "type": "caption",
          "settings": {
            "text": "Inside the Studio",
            "text_style": "uppercase"
          }
        },
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "Crafting Modern Classics",
            "heading_size": "h2"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "We combine artisanal design techniques with modern sensor integration for a product that feels human, not robotic.",
            "text_style": "body"
          }
        }
      },
      "block_order": ["caption", "heading", "text"]
    },
    "gradient_strip": {
      "type": "rich-text",
      "settings": {
        "desktop_content_position": "center",
        "content_alignment": "center",
        "full_width": true,
        "padding_top": 40,
        "padding_bottom": 40
      },
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "Timeless Style for Modern Living",
            "heading_size": "h2"
          }
        }
      },
      "block_order": ["heading"]
    },
    "footer": {
      "type": "footer",
      "settings": {
        "color_scheme": "inverse"
      },
      "blocks": {
        "link_list": {
          "type": "link_list"
        }
      },
      "block_order": ["link_list"]
    }
  },
  "order": [
    "announcement-bar",
    "header",
    "hero",
    "featured_products",
    "tech_feature",
    "studio_story",
    "gradient_strip",
    "footer"
  ]
}
